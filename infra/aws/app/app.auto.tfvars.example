# ABOUTME: Sample variables for the AWS API stack showing required inputs like DB secrets.
# ABOUTME: Copy to app.auto.tfvars and edit before running OpenTofu locally.

stack_name = "todo-backend"
aws_profile = "niche-todo-admin"
allowed_ingress_cidr_blocks = ["203.0.113.42/32"]
desired_count = 2
task_cpu = 512
task_memory = 1024
container_image = "123456789012.dkr.ecr.us-east-1.amazonaws.com/todo-backend-api:latest"
database_connection_string = "Host=example.cluster-123456789012.us-east-1.rds.amazonaws.com;Port=5432;Database=tododb;Username=todoadmin;Password=change-me;Ssl Mode=Require"
database_security_group_id = "sg-0123456789abcdef0"
# Optional: reuse the VPC/subnets from the postgres stack state.
# postgres_state_path = "../postgres/terraform.tfstate"
# Optional: reuse the VPC/subnets from the postgres stack state stored in S3.
# postgres_state_s3_bucket = "niche-todo-tofu-state-use1-<aws-account-id>"
# postgres_state_s3_key = "niche-todo/prod/postgres/terraform.tfstate"
# postgres_state_s3_region = "us-east-1"
# postgres_state_s3_profile = "niche-todo-admin"
# Optional: explicitly reuse an existing VPC and its public subnets.
# existing_vpc_id = "vpc-0123456789abcdef0"
# public_subnet_ids = ["subnet-0123456789abcdef0", "subnet-abcdef0123456789"]
